<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class=" p-3 mb-2 bg-dark text-white col-6 offset-3 mt-3">
    <h3>all listings</h3>
    <form method="post" action="/listings" novalidate class="needs-validation">
    <div class="mb-3">
        <label for="title " class="form-lable" >TITLE</label>
        <input  
        name="listing[title]"
         placeholder="super villa, classy place"
          type="text"
           class="form-control"
           required 
           >
    </div>
    <div  class="mb-3">
        <label for="description" class="form-lable">DESCRIPTION</label>
        <textarea
        name="listing[description]" 
        class="form-control"
        required
        ></textarea>
    </div >
    <div class="mb-3">
        <label for="image" class="form-lable">IMAGE LINK</label>
           <input 
            name="listing[image]"
            placeholder="enter image URL/LINK"
            type="text"
            class="form-control"
            required >
           
    </div>
    <div class="mb-3">
        <label for="price " class="form-lable">PRICE</label>
        <input name="listing[price]" placeholder="â‚¹1,200" type="text" class="form-control" required >
    </div>
    <div class="row  ">
    <div class="mb-3 col-md-6">
        <label for="location" class="form-lable">LOCATION</label>
        <input name="listing[location]" placeholder="surat,mumbai" type="text" class="form-control" required>
    </div>
    <div class="mb-3 col-md-6">
        <label for="country" class="form-lable">COUNTRY</label>
        <input name="listing[country]" placeholder="india" type="text" class="form-control" required>
    </div>
</div>
    
        <button class="btn btn-secondary add-btn">add</button>
    </form>
</div>
</div>
</body>
</html>
