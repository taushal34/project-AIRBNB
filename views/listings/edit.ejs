<% layout("/layouts/boilerplate") %>

<body>
    <div class="p-3 mb-2 bg-dark text-white row col-6 offset-3 mt-3">
    <h3>edit your listings</h3>
    
    <form method="post" action="/listings/<%= llisting._id %>?_method=PUT">
        
        <div class="mb-3 ">
            <label for="title " class="form-lable">TITLE</label>
        <input name="listing[title]" value="<%= llisting.title %>" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label for="description" class="form-lable">DESCRIPTION</label>    
        <textarea name="listing[description]" class="form-control"><%= llisting.description %></textarea>
    </div>
    <div class="mb-3"> 
        <label for="image" class="form-lable">IMAGE LINK</label>  
        <input name="listing[image]" value="<%= llisting.image %>" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label for="price " class="form-lable">PRICE</label>
        <input name="listing[price]" value="<%= llisting.price %>" type="number" class="form-control">
    </div>
<div class="row">
    <div class="mb-3 col-md-6">
        <label for="location" class="form-lable">LOCATION</label>
        <input name="listing[location]" value="<%= llisting.location %>" type="text" class="form-control">
    </div>
    <div class="mb-3 col-md-6">
        <label for="country" class="form-lable">COUNTRY</label>
        <input name="listing[country]" value="<%= llisting.country %>" type="text" class="form-control">
    </div>
</div>
        <button class="btn btn-secondary add-btn">add</button>
    </form>
</div>

</body>
</html>